<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> - <%= dose.ingredient.name %> -
      <%= link_to dose_path(dose) , :method => :delete, data: {:confirm => "R you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
    </li>
    <% end %>
  </ul>
  <br>
  <%= simple_form_for [@cocktail, @dose] , html: {class="form-inline"} do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.button :submit %>
  <% end %>
  <%= link_to "Back to main",cocktails_path  %>
</div>
