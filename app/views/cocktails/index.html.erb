<div class="container">
  <h1>Cocktails List</h1>
  <div class="card">
    <% @cocktails.each do |cocktail| %>
    <div class="row">
      <div class="col-sm-6">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    </div>
    <% end %>
  </div>
  <%= link_to new_cocktail_path , { :class => "btn btn-primary btn-block"} do %>
  <p>create a new  <i class="fas fa-cocktail"></i> </p>
  <% end %>
</div>
